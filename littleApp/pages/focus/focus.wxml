<view class="focus-container">
  <!-- 时间设置区域 -->
  <view class="time-set">
    <text class="title">设置专注时间（分钟）</text>
    <view class="time-btns">
      <button bindtap="setTime" data-time="10" class="time-btn">10</button>
      <button bindtap="setTime" data-time="25" class="time-btn active">25</button>
      <button bindtap="setTime" data-time="30" class="time-btn">30</button>
      <button bindtap="setTime" data-time="60" class="time-btn">60</button>
    </view>
    <!-- 自定义时间输入框 -->
    <view class="custom-time">
      <input 
        type="number" 
        placeholder="自定义分钟数" 
        bindinput="inputCustomTime"
        disabled="{{isRunning}}" 
        class="time-input"
        value="{{customTime}}"
      />
      <button bindtap="confirmCustomTime" class="confirm-btn">确认</button>
    </view>
  </view>

  <!-- 倒计时显示区域 -->
  <view class="countdown">
    <text class="time-text">{{formatTime}}</text>
  </view>

  <!-- 控制按钮 -->
  <view class="control-btns">
    <button bindtap="startCountdown" class="control-btn start" wx:if="{{!isRunning}}">开始专注</button>
    <button bindtap="pauseCountdown" class="control-btn pause" wx:if="{{isRunning && !isPaused}}">暂停</button>
    <button bindtap="resumeCountdown" class="control-btn resume" wx:if="{{isRunning && isPaused}}">继续</button>
    <button bindtap="resetCountdown" class="control-btn reset">重置</button>
  </view>
</view>