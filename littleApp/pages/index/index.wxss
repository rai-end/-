/* pages/index/index.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.index-container {
  width: 80%;
  text-align: center;
}

.title {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 80rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.btn {
  padding: 24rpx 0;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.register-btn {
  background: rgba(255,255,255,0.2);
  color: #fff;
}

.login-btn {
  background: #fff;
  color: #667eea;
}

.btn:active {
  transform: scale(0.98);
}