/* pages/register/register.wxss */
page {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 40rpx 30rpx;
}

.register-container {
  max-width: 750rpx;
  margin: 0 auto;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 60rpx 0;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  background: linear-gradient(90deg, #667eea, #764ba2);
  color: #fff;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-top: 20rpx;
}

.submit-btn:active {
  transform: scale(0.98);
}